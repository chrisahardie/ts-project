{
  "compileOnSave": false,
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "esnext",
    "target": "es2020",
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "paths": {"~/*": ["app/ui/*"]},
    "typeRoots": ["./app/ui/types/custom.d.ts"],
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["./index.ts"]
}
